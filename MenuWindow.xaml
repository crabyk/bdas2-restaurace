<Window x:Class="BDAS2_Restaurace.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Restaurace"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="menuListView" Width="800" HorizontalContentAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nazev" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Cena" DisplayMemberBinding="{Binding Price}"/>
                    <GridViewColumn Header="Gramaz" DisplayMemberBinding="{Binding Weight}"/>
                    <GridViewColumn Header="Recept" DisplayMemberBinding="{Binding Recipe}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
