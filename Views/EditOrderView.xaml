<UserControl x:Class="BDAS2_Restaurace.Views.EditOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BDAS2_Restaurace.Views"
             xmlns:viewModel = "clr-namespace:BDAS2_Restaurace.ViewModel"
             xmlns:vml = "clr-namespace:BDAS2_Restaurace.VML"
             vml:ViewModelLocator.AutoHookedUpViewModel = "True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Content="Zrušit výběr" Command="{Binding Path = ClearSelected}"/>
            </StackPanel>

            <ListView Name="DataListView" Width="Auto" HorizontalContentAlignment="Stretch"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding Path = Items}"
                        SelectedItem="{Binding Path = SelectedItem}"
                        >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Path = ID}"/>
                        <GridViewColumn Header="Datum" DisplayMemberBinding="{Binding Path = OrderDate}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <StackPanel Grid.Column="1">
            <StackPanel DataContext="{Binding Path = SelectedItem}">
                <StackPanel>
                    <Label Content="ID:" />
                    <Label Content="{Binding Path = ID}" />
                </StackPanel>
                <StackPanel>
                    <Label Content="Objem:" />
                    <DatePicker SelectedDate="{Binding Path = OrderDate}" />
                </StackPanel>
                
                <!-- Platba -->
                <StackPanel DataContext="{Binding Path = Payment}">
                    <Label Content="Platba:" FontSize="16"/>
                    <StackPanel>
                        <Label Content="Částka:" />
                        <TextBox Text="{Binding Path = Amount}" />
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Datum platby:" />
                        <TextBox Text="{Binding Path = Date}" />
                    </StackPanel>
                </StackPanel>

                <!-- Zakaznik -->
                <StackPanel DataContext="{Binding Path = Customer}">
                    <Label Content="Zakaznik:" FontSize="16"/>
                    <StackPanel>
                        <Label Content="ID:" />
                        <Label Content="{Binding Path = ID}" />
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Jméno:" />
                        <TextBox Text="{Binding Path = FirstName}" />
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Přijmení:" />
                        <TextBox Text="{Binding Path = LastName}" />
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Tel. číslo:" />
                        <TextBox Text="{Binding Path = PhoneNumber}" />
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Datum narození:" />
                        <DatePicker SelectedDate="{Binding Path = BirthDate}" />
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Email:" />
                        <TextBox Text="{Binding Path = Email}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Přidat jako nový" Command="{Binding Path = Create}"/>
                <Button Content="Uložit upravu" Command="{Binding Path = Update}"/>
                <Button Content="Smazat vybrany" Command="{Binding Path = Delete}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
