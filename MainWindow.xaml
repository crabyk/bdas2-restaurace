<Window x:Class="BDAS2_Restaurace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Restaurace"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <!-- Horni lista -->
        <Border Padding="10" Background="Lavender" BorderBrush="Black" BorderThickness="0,0,0,2">
            <DockPanel Grid.Row="0" VerticalAlignment="Center">
                <Label VerticalAlignment="Center">Restaurace</Label>
                <Button Content="Prihlasit se" HorizontalAlignment="Right" Height="24" Width="80" Click="Button_Click"/>
            </DockPanel>
        </Border>
        <!-- Hlavni nabidka -->
        <Border Padding="10">
            
        </Border>
    </Grid>
</Window>
