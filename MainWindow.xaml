<Window x:Class="BDAS2_Restaurace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Restaurace"
        mc:Ignorable="d"
        Title="Hlavni menu" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Horni lista -->
        <Border Padding="10" Grid.Row="0" Background="Lavender" BorderBrush="Black" BorderThickness="0,0,0,2">
            <DockPanel VerticalAlignment="Center">
                <Label VerticalAlignment="Center">Restaurace</Label>
                <Button Content="Prihlasit se" HorizontalAlignment="Right" Height="24" Width="80" Click="BtnLogin_Click"/>
            </DockPanel>
        </Border>
        <!-- Hlavni nabidka -->
        <Border Grid.Row="1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Content="Jidelni listek" Height="50" Width="100"/>
                <Button Grid.Column="1" Grid.Row="0" Content="Moje objednavky" Height="50" Width="120" IsEnabled="False"/>
                <Button Grid.Column="2" Grid.Row="0" Content="Moje rezervace" Height="50" Width="110" IsEnabled="False"/>
            </Grid>
        </Border>
    </Grid>
</Window>
